<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/recycler_view_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_earth_queka_mag"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Ã‡anakkale - Yenice"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_earth_queka_mag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:text="17,2"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="#FFEB3B"
        />

    <TextView
        android:id="@+id/tv_earth_queka_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarih ve Saat : "
        app:layout_constraintTop_toBottomOf="@id/tv_city_name"
        app:layout_constraintStart_toStartOf="@id/tv_city_name"
        app:layout_constraintEnd_toStartOf="@id/tv_earth_queka_date"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_earth_queka_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2023.01.06 12:33:37"

        app:layout_constraintTop_toBottomOf="@id/tv_city_name"
        app:layout_constraintStart_toEndOf="@id/tv_earth_queka_date1"
        app:layout_constraintEnd_toEndOf="@id/tv_city_name"
        android:gravity="start"
        android:layout_marginTop="8dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>